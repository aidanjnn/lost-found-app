# UW Lost-and-Found App - Environment Variables
# Copy this file to .env and update with your values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
# For SQLite (development)
DATABASE_URL=sqlite:///lostfound.db

# For MySQL (production) - uncomment and configure
# DATABASE_URL=mysql+pymysql://username:password@hostname:port/database_name
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_NAME=lostfound_db

# API Configuration
API_BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# WatIAM OAuth (for production)
# WATIAM_CLIENT_ID=your_client_id
# WATIAM_CLIENT_SECRET=your_client_secret
