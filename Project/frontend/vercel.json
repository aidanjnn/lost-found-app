{
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://uw-lost-found-api.onrender.com/api/:path*"
        },
        {
            "source": "/auth/:path*",
            "destination": "https://uw-lost-found-api.onrender.com/auth/:path*"
        },
        {
            "source": "/((?!api|auth|assets|favicon).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Credentials",
                    "value": "true"
                }
            ]
        }
    ]
}